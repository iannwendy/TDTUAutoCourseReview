{
  "manifest_version": 3,
  "name": "Auto Course Review",
  "version": "3.1.0",
  "description": "Automatic course evaluation extension for TDTU students with enhanced smooth scrolling experience.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Course Review"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://teaching-quality-survey.tdtu.edu.vn/*"],
      "js": ["tdtu-survey.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["tdtu-survey.js"],
      "matches": ["*://teaching-quality-survey.tdtu.edu.vn/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
} 